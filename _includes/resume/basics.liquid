<div class="cv-hero">
  <h1 class="cv-name">{{ data[1].name }}</h1>
  {% if data[1].label %}
    <p class="cv-role">{{ data[1].label }}</p>
  {% endif %}
  {% if data[1].summary %}
    <p class="cv-summary">{{ data[1].summary }}</p>
  {% endif %}
  
  <div class="cv-contact-grid">
    {% if data[1].email %}
      <a href="mailto:{{ data[1].email }}" class="cv-contact-item">
        <i class="fa-solid fa-envelope"></i>
        <span>{{ data[1].email }}</span>
      </a>
    {% endif %}
    {% if data[1].location %}
      <div class="cv-contact-item">
        <i class="fa-solid fa-location-dot"></i>
        <span>{{ data[1].location.city }}, {{ data[1].location.countryCode }}</span>
      </div>
    {% endif %}
  </div>
</div>